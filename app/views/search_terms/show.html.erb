<div id="wrapper">

  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <a href="<%= root_path %>">
          Previous Searches
        </a>
      </li>

      <% @previous_search_terms.each do |previous_search| %>
        <li>
          <a href="<%= search_term_path(previous_search.recent_id) %>"><%= previous_search.term %> <span><%= previous_search.attempts %></span></a>
        </li>
      <% end %>
    </ul>
  </div>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <h1>New Search</h1>
          <%= render partial: "search_form", locals: { search_term: @new_search_term } %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-lg-12">
          <h1>Results for "<%= @search_term.term %>"</h1>
          <hr>
          <% @content.each do |result| %>
            <div class="panel panel-default">
              <div class="panel-body"><%= result["snippet"].html_safe %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>